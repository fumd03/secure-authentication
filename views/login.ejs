<%- include('partials/header.ejs') %>

<div style="max-width: 800px; margin: 50px auto; padding: 20px">
  <h1 style="text-align: center; font-family: Arial, sans-serif; color: #333">
    Login
  </h1>

  <div style="display: flex; justify-content: center; margin-top: 20px">
    <div style="width: 100%; max-width: 500px">
      <div
        style="
          border: 1px solid #ddd;
          border-radius: 10px;
          padding: 20px;
          background-color: #f9f9f9;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        "
      >
        <!-- Makes POST request to /login route -->
        <form action="/login" method="POST">
          <div style="margin-bottom: 20px">
            <label
              for="email"
              style="
                display: block;
                font-size: 1.1rem;
                font-weight: bold;
                color: #555;
                margin-bottom: 5px;
              "
            >
              Email
            </label>
            <input
              type="email"
              class="form-control"
              name="username"
              style="
                width: 100%;
                padding: 10px;
                font-size: 1rem;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
              "
              onfocus="this.style.borderColor='#007bff'; this.style.outline='none';"
              onblur="this.style.borderColor='#ccc';"
            />
          </div>
          <div style="margin-bottom: 20px">
            <label
              for="password"
              style="
                display: block;
                font-size: 1.1rem;
                font-weight: bold;
                color: #555;
                margin-bottom: 5px;
              "
            >
              Password
            </label>
            <input
              type="password"
              class="form-control"
              name="password"
              style="
                width: 100%;
                padding: 10px;
                font-size: 1rem;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
              "
              onfocus="this.style.borderColor='#007bff'; this.style.outline='none';"
              onblur="this.style.borderColor='#ccc';"
            />
          </div>
          <button
            type="submit"
            class="btn btn-dark"
            style="
              display: block;
              width: 100%;
              padding: 10px;
              font-size: 1.2rem;
              color: #fff;
              background-color: #343a40;
              border: none;
              border-radius: 5px;
              cursor: pointer;
              transition: background-color 0.3s ease;
            "
            onmouseover="this.style.backgroundColor='#495057';"
            onmouseout="this.style.backgroundColor='#343a40';"
          >
            Login
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
